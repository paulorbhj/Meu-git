@model CadastroUF.Models.Usuario

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastre - se</h1>
<link href="~/App/Meu_css.css" rel="stylesheet" />

<hr />
<div class="row">
    <div class="col-md-4">
        <!--O onsubmit da tag abaixo é utilizado para carregar o método valida do javascripit que está após o formulario-->
        @*<form asp-action="Create" onsubmit="valida()">*@
            <form asp-action="Create" method="post" onsubmit="valida()">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" required class="form-control" id="busca" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NomeMae" class="control-label"></label>
                    <input asp-for="NomeMae" required class="form-control" id="busca1" />
                    <span asp-validation-for="NomeMae" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" required class="form-control" id="busca2" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CPF" class="control-label"></label>
                    <input asp-for="CPF" required class="form-control" id="busca3" />
                    <span asp-validation-for="CPF" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Senha" class="control-label"></label>
                    <input asp-for="Senha" required class="form-control" id="busca4" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @*<input type="submit" value="Salvar" class="btn btn-success" />*@
                    <button type="submit" value="Salvar" class="btn btn-success"> <span class="fa-solid fa-archive"></span> Salvar</button>
                </div>
            </form>
</div>
</div>



<!-- A seção de códigos abaixo são para gerar a  janela pop up -->
<!--A pop up é ativada pelo id que é chamado na função valida-->
<div class="modal fade" id="MeuModal" tabindex="-1" role="dialog" aria-labelledby="MeuModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="MeuModalLabel">Confirmação de Cadastro</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Cadastro Efetuado com sucesso!
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-save="modal">Ok</button>
            </div>
        </div>
    </div>
</div>

<!--O link abaixo não faz parte da pagina, foi deixado apenas para facilitação de testes. Deve ser removido no final do projeto-->
<a class="btn btn-primary" onmouseover="this.style.backgroundColor='blue'" onmouseout="this.style.backgroundColor='RoyalBlue'" asp-action="Index">Voltar</a>

<!--Criei uma pasta chamada App e coloquei nela um arquivo js com a função valida(App/MeuScript)-->
<script src="~/App/MeuScript.js"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
