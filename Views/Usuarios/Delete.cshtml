@model CadastroUF.Models.Usuario

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3> Ao clicar em Delete o cadastro será excluido</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NomeMae)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeMae)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CPF)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CPF)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Senha)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Senha)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" id="Del1" value="Delete" onclick="Del()" class="btn btn-danger" /> |
        <!--No código abaixo, os atributos onmouseover e onmouseout são para gerar o efito no botãosair-->
        <a class="btn btn-primary" onmouseover="this.style.backgroundColor='blue'" onmouseout="this.style.backgroundColor='RoyalBlue'" asp-action="Index"> 
        <i class="fa-solid fa-arrow-left"></i> Voltar</a>
    </form>
</div>
<!--Criei uma pasta chamada App e coloquei nela um arquivo js com a função Del (App/MeuScript)-->
<script src="~/App/MeuScript.js"></script>
