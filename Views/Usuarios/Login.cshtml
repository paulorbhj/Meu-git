@model CadastroUF.Models.Usuario
@{
    ViewData["Title"] = "Login";
}
<h1>Login</h1>
<div class="row"></div>
<!--Imagem abaixo deverá ser utilizada em popup login -->
<!--Fazer uma function javascript e chamar ela na usuaiocontroller-->
<!--Fazer uma Modal popup para apresentar a imagem abaixo-->
<!--<img src="~/img/03-1.webp" />-->
<div class="row">
<div class="col-md-4">
    <form asp-action="Login" id="log" onsubmit="valida1()">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div style="background-color:aqua; width:400px; height: 400px">
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" id="busca" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" class="form-control" id="busca1" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="checkbox" />
                <label>Esqueci Minha Senha</label>
            </div>
            <div class="form-group">
                <input type="submit" value="Entrar" class="btn btn-success" />
            </div>
        </div>
    </form>
</div>
</div>

<div class="modal fade" id="MeuModal1" tabindex="-1" role="dialog" aria-labelledby="MeuModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="MeuModalLabel">Logando . . . ...</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <img src="~/img/03-1.webp" />
            </div>
        </div>
    </div>
</div>

<style>
    .modal-content {
        width: 675px;
    }
</style>

<!--Criei uma pasta chamada App e coloquei nela um arquivo js com a função valida1(App/MeuScript)-->
<script src="~/App/MeuScript.js"></script>




